# 域名邮件服务器配置文件
# 复制此文件为 .env 并根据需要修改配置

# 服务端口配置
PORT=3000
SMTP_PORT=25
IMAP_PORT=143

# 服务器主机名（重要：设置为您的域名）
SERVER_HOSTNAME=mail.yourdomain.com

# 数据库路径
DB_PATH=./data/mail_server.db

# 默认管理员令牌（生产环境请修改）
ADMIN_TOKEN=mail-admin-2023

# 邮件相关配置
MAX_MESSAGE_SIZE=26214400
SESSION_TIMEOUT=1800
ENABLE_TLS=1
REQUIRE_AUTH=1

# 日志级别
LOG_LEVEL=info

# 开发环境标识
NODE_ENV=development
