{
  "name": "easy-mail-system",
  "version": "2.0.0",
  "description": "完整的SMTP/IMAP邮件服务器系统 - 前后端分离版本",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "start": "npm run backend:start",
    "build": "npm run frontend:build",
    "setup": "npm run backend:setup",
    "backend:dev": "cd backend && npm run dev",
    "backend:start": "cd backend && npm start",
    "backend:setup": "cd backend && npm run setup",
    "backend:install": "cd backend && npm install",
    "frontend:dev": "cd admin && npm run dev", 
    "frontend:build": "cd admin && npm run build",
    "frontend:preview": "cd admin && npm run preview",
    "frontend:install": "cd admin && npm install",
    "install:all": "npm run backend:install && npm run frontend:install",
    "postinstall": "npm run install:all"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "mail-server", 
    "smtp", 
    "imap", 
    "vue", 
    "vite", 
    "email", 
    "self-hosted"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
} 